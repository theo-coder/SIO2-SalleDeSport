{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
<div class="container">
    <h1>Article</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ article.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ article.content }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{% if article.image %}<img style="max-height:50px; max-width:300px;" src="{{ asset(article.image) }}" alt="{{ article.image }}">{% endif %}</td>
            </tr>
            <tr>
                <th>Dernière modification</th>
                <td>{{ article.editDateTime ? article.editDateTime|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>


    <a class="btn btn-primary mb-2" href="{{ path('article_edit', {'id': article.id}) }}">Modifier</a>
    {{ include('admin/article/_delete_form.html.twig') }}

    
    <a href="{{ path('article_index') }}">Retour à la liste</a>

</div>
{% endblock %}
