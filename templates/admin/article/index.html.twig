{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
<div class="container">
    <h1>Liste des articles</h1>
    <a href="{{ path('article_new') }}">Nouvel Article</a>
    <table class="table">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Rubrique</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.name }}</td>
                <td>{{ article.category.name }}</td>
                <td>{{ article.content|u.truncate(200) }}</td>
                <td>
                    <a href="{{ path('article_show', {'id': article.id}) }}">DÃ©tails</a><br>
                    <a href="{{ path('article_edit', {'id': article.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucun article ...</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

</div>
{% endblock %}
