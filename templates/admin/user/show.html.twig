{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
<div class="container">
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ user.firstName }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ user.lastName }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ user.postalAddress }}</td>
            </tr>
            <tr>
                <th>Code postal</th>
                <td>{{ user.postalCode }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ user.city }}</td>
            </tr>
            <tr>
                <th>Newsletter</th>
                <td>{{ user.isNewsletter ? 'Oui' : 'Non' }}</td>
            </tr>
            <tr>
                <th>Image de profil</th>
                <td>{{ user.profilePicture }}</td>
            </tr>
        </tbody>
    </table>


    <a class="btn btn-primary mb-2" href="{{ path('user_edit', {'id': user.id}) }}">Modifier</a>

    {{ include('admin/user/_delete_form.html.twig') }}
    
    <a href="{{ path('user_index') }}">Retour à la liste</a>
</div>
{% endblock %}
