{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
<div class="container">
    <h1>Catégorie</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ category.name }}</td>
            </tr>
        </tbody>
    </table>


    <a class="btn btn-primary mb-2" href="{{ path('category_edit', {'id': category.id}) }}">Modifier</a>

    {{ include('category/_delete_form.html.twig') }}
    <a href="{{ path('category_index') }}">Retour à la liste</a>
</div>
{% endblock %}
