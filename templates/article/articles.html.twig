{% extends 'base.html.twig' %}

{% block title %}Articles{% endblock %}

{% block body %}

<div class="container">
    <h1 class="mt-4 title">Articles</h1>
    
    <hr>
    {% for category in categories %}
        {% if category.articles|length != 0 %}
            <br>
            <h2 class="mt-2 ml-1">{{ category.name }} :</h2>
            <div class="d-flex justify-content-start mt-4">
            {% for article in category.articles %}
                <div class="card mr-3" style="width: 18rem; max-height: 30rem; overflow:hidden;">
                            {% if article.image %}
                                <img src="{{ article.image }}" style="max-height:220px;" class="card-img-top" alt="">
                            {% else %}
                                <img src="https://via.placeholder.com/348x220&text=Â " style="max-height:220px;" class="card-img-top" alt="">
                            {% endif %}
                            <div class="card-body">
                                <h5 class="card-title">{{ article.name }}</h5>
                                <p class="card-text" style="max-height: 5rem; overflow: hidden; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical;">{{ article.content }}</p>
                                <a href="{{ path('article', {'id': article.id}) }}" class="btn btn-primary">Voir plus</a>
                            </div>
                        </div>
            {% endfor %}
            </div>
        {% endif %}
    {% endfor %}
    
</div>

{% endblock %}
